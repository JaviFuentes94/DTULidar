/*******************************************************************
* DESCRIPTION :     Clears the screen 
*
* INPUTS : None
*
* OUTPUTS : None
*
* NOTES : None
*/ 
void CLRScreen (){
    putc(0x1b); // <ESC> Clear display
    putc(0x5b); // [
    putc(0x32); // 2
    putc(0x4a); // J
    putc(0x1b); // <ESC> Reset cursor position 
    putc(0x5b); // [
    putc(0x30); // 0
    putc(0x3b); // ;
    putc(0x30); // 0
    putc(0x48); // H
}
